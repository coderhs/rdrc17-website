<div class="container">
  <div class="row">
    <div class="col-xs-12">

      <h1>Paper submission</h1>

      <%= form_for(@paper) do |f| %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :abstract %>
          <%= f.text_area :abstract, class: "form-control" %>
        </div>

        <div class="form-controls">
          <%= f.submit "Submit for review", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
