<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">

      <h1><%= @user.name %></h1>
      <span><%= @user.email %></h1>

      <%= image_tag @user.avatar_url if @user.avatar_url %>

      <p><%= @user.bio %></p>

      <div class="text-right">
        <%= link_to "Edit", edit_my_profile_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
